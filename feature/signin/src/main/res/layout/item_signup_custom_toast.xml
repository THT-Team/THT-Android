<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_rectangle_black_22222_radius_12"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="60dp"
    android:paddingVertical="100dp">

    <ImageView
        android:layout_marginBottom="100dp"
        android:id="@+id/iv_image_custom_toast"
        android:src="@drawable/ic_success_toast"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:gravity="center"
        tools:text="@string/message_send_auth_success"
        style="@style/H2BoldTextStyle"
        android:textColor="@color/white_f9fafa"
        android:layout_marginTop="57dp"
        android:id="@+id/tv_title_custom_toast"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/iv_image_custom_toast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
