<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyActivity"
    android:background="@color/black_1e1e1e"
    android:id="@+id/layout_background"
    >

    <include
        android:id="@+id/item_signup_tool_bar"
        layout="@layout/item_signup_tool_bar" />

    <TextView
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="38dp"
        android:textSize="30sp"
        android:id="@+id/tv_verify_title"
        android:text="@string/title_verify"
        android:textColor="@color/white_f9fafa"
        app:layout_constraintTop_toBottomOf="@id/item_signup_tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="18dp"
        android:layout_marginStart="38dp"
        android:id="@+id/tv_verify_message"
        tools:text="@string/message_verify"
        android:textSize="16sp"
        android:textColor="@color/gray_666666"
        app:layout_constraintTop_toBottomOf="@id/tv_verify_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textSize="16sp"
        android:id="@+id/tv_time"
        android:layout_marginEnd="38dp"
        android:textColor="@color/red_ef4444"
        app:layout_constraintBottom_toBottomOf="@id/tv_verify_message"
        app:layout_constraintStart_toEndOf="@id/tv_verify_message"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/layout_verify_input"
       app:layout_constraintTop_toBottomOf="@id/tv_verify_message"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       >
       <com.google.android.material.textfield.TextInputLayout
           android:layout_marginTop="32dp"
           android:layout_marginStart="@dimen/VerifyTextInputEditLayoutHorizontalMargin"
           android:id="@+id/layout_verify_1"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toStartOf="@id/layout_verify_2"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:hintEnabled="false"
           app:errorEnabled="true"
           style="@style/VerifyTextInputLayoutStyle"
           android:theme="@style/VerifyTextInputLayoutStyle"
           >
           <com.google.android.material.textfield.TextInputEditText
               style="@style/VerifyInputEditTextStyle"
               android:id="@+id/et_verify_1"
               />
       </com.google.android.material.textfield.TextInputLayout>

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/layout_verify_2"
           app:layout_constraintTop_toTopOf="@id/layout_verify_1"
           app:layout_constraintStart_toEndOf="@id/layout_verify_1"
           app:layout_constraintEnd_toStartOf="@id/layout_verify_3"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:hintEnabled="false"
           style="@style/VerifyTextInputLayoutStyle"
           android:theme="@style/VerifyTextInputLayoutStyle"
           >
           <com.google.android.material.textfield.TextInputEditText
               style="@style/VerifyInputEditTextStyle"
               android:id="@+id/et_verify_2"
               />
       </com.google.android.material.textfield.TextInputLayout>

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/layout_verify_3"
           app:layout_constraintTop_toTopOf="@id/layout_verify_2"
           app:layout_constraintStart_toEndOf="@id/layout_verify_2"
           app:layout_constraintEnd_toStartOf="@id/layout_verify_4"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:hintEnabled="false"
           style="@style/VerifyTextInputLayoutStyle"
           android:theme="@style/VerifyTextInputLayoutStyle"
           >
           <com.google.android.material.textfield.TextInputEditText
               style="@style/VerifyInputEditTextStyle"
               android:id="@+id/et_verify_3"
               />
       </com.google.android.material.textfield.TextInputLayout>

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/layout_verify_4"
           app:layout_constraintTop_toTopOf="@id/layout_verify_3"
           app:layout_constraintStart_toEndOf="@id/layout_verify_3"
           app:layout_constraintEnd_toStartOf="@id/layout_verify_5"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:hintEnabled="false"
           style="@style/VerifyTextInputLayoutStyle"
           android:theme="@style/VerifyTextInputLayoutStyle"
           >
           <com.google.android.material.textfield.TextInputEditText
               style="@style/VerifyInputEditTextStyle"
               android:id="@+id/et_verify_4"
               />
       </com.google.android.material.textfield.TextInputLayout>

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/layout_verify_5"
           app:layout_constraintTop_toTopOf="@id/layout_verify_4"
           app:layout_constraintStart_toEndOf="@id/layout_verify_4"
           app:layout_constraintEnd_toStartOf="@id/layout_verify_6"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:hintEnabled="false"
           style="@style/VerifyTextInputLayoutStyle"
           android:theme="@style/VerifyTextInputLayoutStyle"
           >
           <com.google.android.material.textfield.TextInputEditText
               style="@style/VerifyInputEditTextStyle"
               android:id="@+id/et_verify_5"
               />
       </com.google.android.material.textfield.TextInputLayout>

       <com.google.android.material.textfield.TextInputLayout
           android:layout_marginEnd="@dimen/VerifyTextInputEditLayoutHorizontalMargin"
           android:id="@+id/layout_verify_6"
           app:layout_constraintTop_toTopOf="@id/layout_verify_5"
           app:layout_constraintStart_toEndOf="@id/layout_verify_5"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:hintEnabled="false"
           style="@style/VerifyTextInputLayoutStyle"
           android:theme="@style/VerifyTextInputLayoutStyle"
           >
           <com.google.android.material.textfield.TextInputEditText
               style="@style/VerifyInputEditTextStyle"
               android:id="@+id/et_verify_6"
               />
       </com.google.android.material.textfield.TextInputLayout>


   </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:visibility="invisible"
        android:text="@string/message_verify_error"
        android:layout_marginHorizontal="38dp"
        android:id="@+id/tv_verify_error"
        app:layout_constraintTop_toBottomOf="@id/layout_verify_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="11sp"
        android:textColor="@color/red_ef4444"
        android:gravity="start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="38dp"
        android:id="@+id/tv_resend"
        android:text="@string/message_resend_auth"
        app:layout_constraintTop_toBottomOf="@id/tv_verify_error"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/gray_666666"
        />

    <ProgressBar
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/progress"
        android:indeterminateTint="@color/red_ef4444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
