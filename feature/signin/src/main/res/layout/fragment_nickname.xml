<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_161616"
    android:id="@+id/layout_background"
    >

    <TextView
        style="@style/H1BoldGrayTextStyle"
        android:layout_marginTop="@dimen/SignupProcessFragmentTopPadding"
        android:id="@+id/tv_nickname_title"
        android:text="@string/title_nickname"
        android:textColor="@color/gray_666666"
        android:layout_marginHorizontal="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_et_nickname"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="@dimen/AuthTextInputEditLayoutHorizontalMargin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/NicknameTextInputLayoutStyle"
        android:theme="@style/NicknameTextInputLayoutStyle"
        >
        <com.google.android.material.textfield.TextInputEditText
            style="@style/PhoneAuthInputEditTextFontStyle"
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginBottom="@dimen/TextInputEditTextBottomMinusMargin"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_marginTop="1dp"
        android:layout_marginStart="38dp"
        android:id="@+id/iv_error"
        app:layout_constraintTop_toBottomOf="@id/layout_et_nickname"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_error"
        />

    <TextView
        style="@style/Caption1MediumGrayTextStyle"
        android:textColor="@color/gray_666666"
        android:id="@+id/tv_nickname_input_message"
        android:text="@string/message_nickname_input"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="@id/iv_error"
        app:layout_constraintStart_toEndOf="@id/iv_error"
        app:layout_constraintEnd_toStartOf="@id/tv_input_length"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <TextView
        style="@style/Pretendard14_700GrayTextStyle"
        android:layout_marginEnd="38dp"
        android:id="@+id/tv_input_length"
        app:layout_constraintTop_toTopOf="@id/tv_nickname_input_message"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:enabled="false"
        android:layout_marginTop="44dp"
        android:layout_marginHorizontal="38dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname_input_message"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/selector_btn_right_arrow"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ProgressBar
        style="@style/THT_ProgressStyle"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
