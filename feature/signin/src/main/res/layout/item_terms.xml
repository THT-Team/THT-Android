<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="36dp"
    android:paddingVertical="11dp"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/layout_background"
    >

    <ImageView
        android:src="@drawable/selector_ic_check"
        android:id="@+id/iv_check"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_title"
        style="@style/SubT1RegularTextStyle"
        android:textColor="@color/white_f9fafa"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/iv_check"
        app:layout_constraintStart_toEndOf="@id/iv_check"
        app:layout_constraintEnd_toStartOf="@id/iv_right_arrow"
        tools:text="(필수)제목"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:src="@drawable/ic_right_arrow_gray"
        android:id="@+id/iv_right_arrow"
        app:layout_constraintTop_toTopOf="@id/iv_check"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        tools:text="description content"
        android:visibility="gone"
        android:layout_marginTop="3dp"
        style="@style/Caption1MediumGrayTextStyle"
        android:id="@+id/tv_description"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
