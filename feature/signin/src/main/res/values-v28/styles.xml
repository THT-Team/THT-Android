<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PhoneAuthInputEditTextFontStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">26sp</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textColor">@color/yellow_f9cc2e</item>
    </style>

    <style name="PhoneAuthInputLayoutFontStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/yellow_f9cc2e</item>
        <item name="android:fontWeight">600</item>

        <item name="android:textColorHint">@color/brown_26241f</item>  // hint 색
        <item name="hintTextColor">@color/yellow_f9cc2e</item>   // floating hint 색
        <item name="helperTextTextColor">@color/yellow_f9cc2e</item>

        <item name="errorTextColor">@color/red_ef4444</item>
    </style>

    <style name="VerifyTextInputLayoutFontStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/brown_26241f</item>  // hint 색
        <item name="hintTextColor">@color/yellow_f9cc2e</item>   // floating hint 색
        <item name="helperTextTextColor">@color/yellow_f9cc2e</item>

        <item name="errorTextColor">@color/red_ef4444</item>
        <item name="errorTextAppearance">@style/VerifyTextInputLayoutErrorTextAppearance</item>
    </style>

    <style name="VerifyInputEditTextFontStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/yellow_f9cc2e</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="InquiryTextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/gray_8d8d8d</item>  // unFocus 상태일때 밑줄 색.
        <item name="colorControlActivated">@color/yellow_f9cc2e</item>
        <item name="colorControlHighlight">@color/yellow_f9cc2e</item>
        <item name="android:textCursorDrawable">@color/yellow_f9cc2e</item>  // cursor 색
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
    </style>

    <style name="InquiryEditTextFontStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">@color/brown_26241f</item>
        <item name="android:textColor">@color/white_f9fafa</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="PreferredGenderButtonStyle" parent="H4SemiBoldBlackTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_preferred_gender</item>
    </style>

    <style name="GenderButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_gender</item>
        <item name="android:textAppearance">@style/RadioButtonTextAppearance</item>
    </style>

    <style name="RadioButtonTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textColor">@color/black_111111</item>
    </style>


</resources>
