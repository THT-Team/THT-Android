<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.THT" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_f9cc2e</item>
        <item name="colorPrimaryVariant">@color/black_161616</item>
        <item name="colorOnPrimary">@color/black_111111</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black_161616</item>
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black_222222</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_falling_launcher</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.THT</item>

        <item name="android:statusBarColor">@color/black_222222</item>
        <item name="android:navigationBarColor">@color/black_222222</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
